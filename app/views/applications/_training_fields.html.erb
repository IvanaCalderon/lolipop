
<div class="nested-fields border border-gray-300 p-4 rounded-lg mb-4">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    
    <div class="field">
      <%= f.label :description, "Training Description", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :description, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :level, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :level, Training.levels.keys.map { |key| [key.humanize, key] }, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :start_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_select :start_date, { start_year: Date.today.year - 50, end_year: Date.today.year + 5 }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :end_date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_select :end_date, { start_year: Date.today.year - 50, end_year: Date.today.year + 5 }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="field">
      <%= f.label :institution, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :institution, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
  
  </div>

  <div class="mt-4">
    <%= link_to "Remove Training", '#', class: "remove-training inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    <%= f.hidden_field :_destroy %>
  </div>
</div>